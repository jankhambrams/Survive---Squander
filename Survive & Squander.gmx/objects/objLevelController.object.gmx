            <kind>1</kind>
            <string>///Level Generation
//  Resize the room
room_width = TILESIZE / 16 * 720;
room_height = TILESIZE / 16 * 720;

//  Set the grid width and height
width = room_width div TILESIZE;
height = room_width div TILESIZE;

//  Create the grid
terrain = ds_grid_create(width, height);

//  Fill the grid with water
ds_grid_set_region(terrain, 0, 0, width - 1, height - 1, WATER);

//  Randomize the seed
randomize();

//  Create the controller at the center of the grid
var cx = width div 2;
var cy = height div 2;

//  Give the controller a random direction
var cdir = irandom(3);

//  Set the odds variable for changing direction
var odds = 1;

//  Create the level using 1000 steps
repeat 1000
{
    //  Place a ground tile at the controller position
    terrain[# cx, cy] = GROUND;
    
    //  Randomize the direction of the controller
    if irandom(odds) == odds
    {
        cdir = irandom(3);
    }
    //  Move the controller
    var xdir = lengthdir_x(1, cdir * 90);
    var ydir = lengthdir_y(1, cdir * 90);
    cx += xdir;
    cy += ydir;
    
    //  Make sure the controller doesn't move outside the grid
    cx = clamp(cx, 1, width - 2);
    cy = clamp(cy, 1, height - 2);
}
//  Scan tiles to add shore as a border between water and ground
for (var yy = 1; yy &lt; height - 1; yy++)
{
    for (var xx = 1; xx &lt; width - 1; xx++)
    {
        if terrain[#xx, yy] = GROUND
        {
            if terrain[# xx + 1, yy] != GROUND terrain[# xx + 1, yy] = SHORE;    //right
            if terrain[# xx - 1, yy] != GROUND terrain[# xx - 1, yy] = SHORE;    //left
            if terrain[# xx, yy + 1] != GROUND terrain[# xx, yy + 1] = SHORE;    //bottom
            if terrain[# xx, yy - 1] != GROUND terrain[# xx, yy - 1] = SHORE;    //top
            if terrain[# xx + 1, yy + 1] != GROUND terrain[# xx + 1, yy + 1] = SHORE; //bottom right
            if terrain[# xx + 1, yy - 1] != GROUND terrain[# xx + 1, yy - 1] = SHORE; //top right
            if terrain[# xx - 1, yy + 1] != GROUND terrain[# xx - 1, yy + 1] = SHORE; //bottom left
            if terrain[# xx - 1, yy - 1] != GROUND terrain[# xx - 1, yy - 1] = SHORE; //top left
        }
    }
}
//  Draw the tiles
for (var yy = 1; yy &lt; height - 1; yy++)
{
    for (var xx = 1; xx &lt; width - 1; xx++)
    {
        //  Draw the ground
        if terrain[# xx, yy] = GROUND
        {
            tile_add(bg_ground, 0, 0, TILESIZE, TILESIZE, xx * TILESIZE, yy * TILESIZE, 0);
        }
        //  Draw the shore
        else if terrain[# xx, yy] = SHORE
        {
            tile_add(bg_shore, 0, 0, TILESIZE, TILESIZE, xx * TILESIZE, yy * TILESIZE, 0);
        }
        //  Draw the water
        else if terrain[# xx, yy] = WATER
        {
            tile_add(bg_water, 0, 0, TILESIZE, TILESIZE, xx * TILESIZE, yy * TILESIZE, 0);
        }
    }
}
</string>
